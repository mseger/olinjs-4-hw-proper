extends layout

block content
	h1 Welcome to Twitter
	div(id="compose_tweet_dialog")
		form(name="compose_tweet", action="/tweet/new", method="post")
			| What's on your mind?
			input(type="text", name="tweet_body")
			input(type="submit", value="Tweet")
			br
			a(href="/users/new", id="sign_up_link") I'm new, sign me up!

	div(id="display_tweets")
		each tweet, i in tweets
			div(value=tweet, id="tweet_id") 
				b #{tweet.username}
				br
				| #{tweet.text_body}
			br
